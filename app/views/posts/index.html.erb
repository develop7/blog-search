<% flash.each do |name, msg| -%>
  <%= content_tag :div, msg, class: name %>
<% end -%>

<%= form_with(url: "/search", method: "get", local: true) do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag(:search) %>
  <%= submit_tag("Search") %>
<% end %>

<br />

<% @posts.each do |post| %>
  <%= post.title %>
  Authored by <%= post.authors.pluck(:full_name).to_sentence %>
  <%= link_to "Show", post %>
  <br/>
<% end %>
